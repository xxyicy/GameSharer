
	<div id="signup-form" class="sign-modal">
		<span class="close" title="Close Modal">&times;</span>

		<!-- Modal Content -->
		<form class="modal-content animate">

			<div id="signup-container" class="container">
				<label><b>Username</b></label>
				<input type="text" placeholder="Enter Username" name="username" required>

				<label><b>Password</b></label>
				<input type="password" placeholder="Enter Password" name="password" required>

				<label><b>Comfirm Password</b></label>
				<input type="password" placeholder="Re-Enter Your Password" name="repassword" required>

				<label><b>Phone Number</b></label>
				<input type="text" placeholder="Enter Your Phone Number" name="phoneNumber" required>

				<label><b>Email</b></label>
				<input type="text" placeholder="Enter Your Email" name="email" required>

				<label><b>First Name</b></label>
				<input type="text" placeholder="Enter Your First Name" name="firstName" required>

				<label><b>Last Name</b></label>
				<input type="text" placeholder="Enter Your Last Name" name="lastName" required>

				<button id="register" type="button">Register</button>
			</div>

			<div class="container" style="background-color:#f1f1f1">
				<button type="button" class="cancelbtn">Cancel</button>
			</div>
		</form>
	</div>
